#!/bin/bash
AWSCLI='/usr/local/bin/docker run --rm -v /Users/ckim/.aws:/root/.aws:ro awscli aws'
JQPATH=/usr/local/bin/jq
for RRR in $($AWSCLI ec2 describe-regions  --query 'Regions[].{Name:RegionName}' --output text) ; do $AWSCLI --region $RRR ec2 describe-instances --query 'Reservations[].Instances[].{az:Placement.AvailabilityZone,id:InstanceId,type:InstanceType,name:Tags[?Key==`Name`]|[0].Value,state:State.Name}' | $JQPATH -c '.[]' ; done
